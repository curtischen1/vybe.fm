# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vybe_db

# Redis Configuration (optional - comment out if not using Redis)
# REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Spotify API Configuration
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-that-must-be-at-least-32-characters-long

# Cache Configuration
CACHE_TTL_SECONDS=3600
CONTEXT_CACHE_TTL_SECONDS=86400

# API Timeouts (milliseconds)
SPOTIFY_API_TIMEOUT=5000
OPENAI_API_TIMEOUT=10000

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
